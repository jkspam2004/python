    print('x is a positive number')
elif x < 0 :
    print('x is a negative number')
else :
    print('x is 0')

# try and except
# if the code in the 'try' works, then the 'except' is skipped
# if the code in the 'try' fails, then it jumps the the 'except' block
test = input("Enter an integer:")  
try:  
   test = int(test)  
except:  
   print("Invalid entry.")
   quit()  
result = test * 2  
print(result) 

astr = 'Bob'
try:
    print('Hello')
    istr = int(astr)
    print('There')
except:
    istr = -1
print('Done', istr)


# importing module
import math
